[core]
  autocrlf = input
[color]
  ui = auto
[column]
  ui = auto
[init]
  defaultBranch = main
[commit]
  verbose = true
[push]
  default = simple
  autoSetupRemote = true
[pull]
  rebase = false
[rebase]
  autosquash = true
  autostash = true
  updateRefs = true
[tag]
  sort = -version:refname
[diff]
  algorithm = histogram
  colorMoved = default
  colorMovedWS = allow-indentation-change
  renames = true
  mnemonicPrefix = true
[merge]
  tool = nvimdiff2
  conflictstyle = zdiff3
[mergetool]
  keepBackup = false
  writeToTemp = true
[rerere]
  enabled = true
  autoupdate = true
[branch]
  sort = -committerdate
[alias]
  s = status
  a = add
  c = commit -m
  d = diff
  ds = diff --staged
  r = restore
  rs = restore --staged
  m = merge
  mt = mergetool
  n = switch --create
  l = log --color --graph --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset %Cgreen%ad%Creset %C(bold blue)<%an>%Creset %s%C(yellow)%d%Creset'
  t = tag
  f = fetch
  co = checkout
  cl = clean --force
  sw = switch
  br = branch
  rb = rebase
  st = stash
  ps = push
  psu = !git push --set-upstream origin $(git branch --show-current)
  psf = push --force-with-lease
  pl = pull
  p = pull
  sy = pull origin main:main --no-edit
  root = rev-parse --show-toplevel
  default-branch = !git remote show origin | grep 'HEAD branch' | cut -d' ' -f5
  praise = blame
[help]
  autocorrect = 12  # 1.2 seconds
