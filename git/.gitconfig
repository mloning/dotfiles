[user]
  name = mloning
  email = 21020482+mloning@users.noreply.github.com
[credential]
  helper = osxkeychain
[core]
  autocrlf = input
[color]
  ui = auto
[init]
  defaultBranch = main
[push]
  default = simple
  autoSetupRemote = true
[pull]
  rebase = false
[commit]
  # git signatures, see https://withblue.ink/2020/05/17/how-and-why-to-sign-git-commits.html
  gpgSign = true
[tag]
  gpgSign = true
  # sort tags by semantic versioning in reverse order
  sort = -version:refname
[merge]
  tool = nvimdiff2
[diff]
  colormoved = default
  colormovedws = allow-indentation-change
[mergetool]
  keepBackup = false
  writeToTemp = true
[alias]
  s = status
  a = add
  c = commit
  d = diff
  r = restore
  m = merge
  mt = mergetool
  n = switch --create
  l = log --color --graph --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset %Cgreen(%ad)%Creset %C(bold blue)<%an>%Creset %s%C(yellow)%d%Creset'
  t = tag
  co = checkout
  sw = switch
  br = branch
  rb = rebase
  st = stash
  ps = push
  psu = !git push --set-upstream origin $(git branch --show-current)
  pl = pull
  sy = pull origin main:main --no-edit
  root = rev-parse --show-toplevel
  default-branch = !git remote show origin | grep 'HEAD branch' | cut -d' ' -f5

